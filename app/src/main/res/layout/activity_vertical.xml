<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
android:orientation="vertical"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="27sp"
        android:gravity="bottom|end"
        />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="this answer"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/btn_clear"
                style="@style/BtnAction"
                android:text="C">
            </TextView>
            <TextView
                android:id="@+id/btn_open_bracket"
                style="@style/BtnAction"
                android:text="(">
            </TextView>

            <TextView
                android:id="@+id/btn_close_bracket"
                style="@style/BtnAction"
                android:text=")">
            </TextView>
            <TextView
                android:id="@+id/btn_back"
                style="@style/BtnAction"
                android:text="Back">
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/btn_7"
                style="@style/BntNumbers"
                android:text="7">
            </TextView>
            <TextView
                android:id="@+id/btn_8"
                style="@style/BntNumbers"
                android:text="8">
            </TextView>
            <TextView
                android:id="@+id/btn_9"
                style="@style/BntNumbers"
                android:text="9">
            </TextView>
            <TextView
                android:id="@+id/btn_share"
                style="@style/BtnAction"
                android:text="/">
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/btn_4"
                style="@style/BntNumbers"
                android:text="4">
            </TextView>
            <TextView
                android:id="@+id/btn_5"
                style="@style/BntNumbers"
                android:text="5">
            </TextView>
            <TextView
                android:id="@+id/btn_6"
                style="@style/BntNumbers"
                android:text="6">
            </TextView>
            <TextView
                android:id="@+id/btn_multiply"
                style="@style/BtnAction"
                android:text="*">
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/btn_1"
                style="@style/BntNumbers"
                android:text="1">
            </TextView>
            <TextView
                android:id="@+id/btn_2"
                style="@style/BntNumbers"
                android:text="2">
            </TextView>
            <TextView
                android:id="@+id/btn_3"
                style="@style/BntNumbers"
                android:text="3">
            </TextView>
            <TextView
                android:id="@+id/btn_minus"
                style="@style/BtnAction"
                android:text="-">
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/btn_0"
                style="@style/BntNumbers"
                android:text="0">
            </TextView>
            <TextView
                android:id="@+id/btn_double"
                style="@style/BntNumbers"
                android:text=",">
            </TextView>
            <TextView
                android:id="@+id/btn_answer"
                style="@style/BtnAction"
                android:text="=">
            </TextView>
            <TextView
                android:id="@+id/btn_sum"
                style="@style/BtnAction"
                android:text="+">
            </TextView>
        </TableRow>

    </TableLayout>
</LinearLayout>